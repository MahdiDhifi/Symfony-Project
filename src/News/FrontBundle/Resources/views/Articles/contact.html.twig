         {% block content %}
            <div class="col-lg-6 col-md-6 col-sm-8">
          <div class="middle_content">
              <h2>Contact us</h2>
                
              <div class="contact_area wow fadeInLeftBig">
            <form class="contact_form" role="form" action="" method="post" enctype="multipart/form-data">
                <font color="lime" size="3"> <b>{{send}}</b></font>
                <br>  
              
              
              
                 <div class="form-group">
                              
                              {{ form_widget ( form.first   ,{'attr': {'class': 'form-control' , 'placeholder': 'First Name'}}) }}
                                    <front color="red"> {{ form_errors(form.first ) }} </front> 
                                
                            </div>
                                   
                                     <div class="form-group">
                           
                              {{ form_widget ( form.last   ,{'attr': {'class': 'form-control' , 'placeholder': 'Last Name'}}) }}
                                    <front> {{ form_errors(form.last ) }} </front> 
                                
                            </div>
                                   
                              <div class="form-group">
                            
                              {{ form_widget ( form.mail   ,{'attr': {'class': 'form-control' , 'placeholder': 'Your adress mail'}}) }}
                                 <front color="red">    {{ form_errors(form.mail ) }}   </front> 
                                
                            </div>
                                   
                                     <div class="form-group">
                              
                              {{ form_widget ( form.subject   ,{'attr': {'class': 'form-control' , 'placeholder': 'Subject'}}) }}
                                  <front color="red">   {{ form_errors(form.subject ) }} </front > 
                                
                            </div>
                                   
                                        <div class="form-group">
                               
                              {{ form_widget ( form.contenue  ,{'attr': {'class': 'form-control' ,'rows':'7', 'placeholder': 'Your message'}}) }}
                              <front color="red">  {{ form_errors(form.contenue ) }} </front>
                                
                            </div>    
                              
            {{ form_widget ( form.submit,{'attr': {'class': 'btn btn-danger'}}) }}
            </form>
          </div>
          </div>
        </div>
