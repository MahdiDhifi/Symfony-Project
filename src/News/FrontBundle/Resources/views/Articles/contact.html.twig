					   <li>
                  <figure class="effect-lily">
                    <iframe width="270" height="150" src="{{ asset('https://www.youtube.com/embed/')}}{{ latest[i].video }}" frameborder="0" allowfullscreen></iframe>
                    
                      <figcaption>
                      <a href="{{ path('detailarticle',{ 'id': latest[i].id })}}">{{latest[i].titre}}</a>
                    </figcaption>     
                  </figure>
                </li>
                                        </div>
					 {% endif %}
