{% extends "NewsAdminBundle::layout.html.twig" %}

         {% block  table %}             
    <div id="page-wrapper">

            <div class="container-fluid">

                <!-- Page Heading -->
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">
                           Article details
                        </h1>
                        <ol class="breadcrumb">
                            <li>
                                <i class="fa fa-dashboard"></i>  <a href="#">Dashboard</a>
                            </li>
                            <li class="active">
                                <i class="fa fa-table"></i> Details / {{ entity.titre }}
                            </li>
                        </ol>
                    </div>
                </div>
                <!-- /.row -->
<div class="row">
                   
       <h2>  {{entity.titre}}</h2>              
    <p align="right">
                <a href="{{ path('articles_edit',{ 'id': entity.id }) }}">
                    <button  type="button" class="btn btn-lg btn-primary">Edit Article</button>
                </a>
                
    </p>
                
                      
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover table-striped">
                               
                                <tr>  <td colspan="2"><center><img src="{{ asset('articles/')}}{{ entity.image }}" width="500" height="300" title="{{ entity.titre }}"  alt="{{ entity.titre }}"></center></td> </tr>
                                    <tr><td>Titre</td>  <td>{{ entity.titre }}</td> </tr>
                                    <tr><td>Categorie</td><td>{{ entity.categorie.titre }}</td></tr>
                                    <tr><td>Date</td>  <td>{{ entity.date |date("Y-m-d") }}</td> </tr>   
                                     <tr> <td>Content</td>  <td>{{ entity.contenue }}</td></tr>
                                     {% if entity.image1 != null %}
                                          <tr> <td>Other photo</td>  <td> <center><img src="{{ asset('articles/')}}{{ entity.image1 }}" width="300" height="200" title="{{ entity.titre }}"  alt="{{ entity.titre }}"></center></td></tr>
                                         {% endif %}
                                     {% if entity.parg1 != null %}
                                          <tr> <td>Other section</td>  <td>{{ entity.parg1 }}</td></tr>
                                         {% endif %}
                                           {% if entity.image2 != null %}
                                               <tr> <td>Other photo</td> <td><center> <img src="{{ asset('articles/')}}{{ entity.image2 }}" width="300" height="200" title="{{ entity.titre }}"  alt="{{ entity.titre }}"></center></td></tr>
                                         {% endif %}
                                     {% if entity.parg2 != null %}
                                          <tr> <td>Other section</td>  <td>{{ entity.parg2 }}</td></tr>
                                         {% endif %}
                                         
                                           {% if entity.image3 != null %}
                                           <tr> <td>Other photo</td> <td><center> <img src="{{ asset('articles/')}}{{ entity.image3 }}" width="300" height="200" title="{{ entity.titre }}"  alt="{{ entity.titre }}"></center></td></tr>
                                          {% endif %}
                                     {% if entity.parg3 != null %}
                                          <tr> <td>Other section</td>  <td>{{ entity.parg3 }}</td></tr>
                                         {% endif %}
                                         
                                         
                                           {% if entity.image4 != null %}
                                           <tr> <td>Other photo</td> <td><center> <img src="{{ asset('articles/')}}{{ entity.image4 }}" width="300" height="200" title="{{ entity.titre }}"  alt="{{ entity.titre }}"></center></td></tr>
                                          {% endif %}
                                     {% if entity.parg4 != null %}
                                          <tr> <td>Other section</td>  <td>{{ entity.parg4 }}</td></tr>
                                         {% endif %}
                                         
                                         
                                           {% if entity.image5 != null %}
                                            <tr> <td>Other photo</td> <td><center> <img src="{{ asset('articles/')}}{{ entity.image5 }}" width="300" height="200" title="{{ entity.titre }}"  alt="{{ entity.titre }}"></center></td></tr>
                                         {% endif %}
                                     {% if entity.parg5 != null %}
                                          <tr> <td>Other section</td>  <td>{{ entity.parg5 }}</td></tr>
                                         {% endif %}
                                         {% if entity.video != null %}
                                    <tr><td colspan="2"><center>
                                        <iframe width="700" height="370" src="{{ asset('https://www.youtube.com/embed/')}}{{ entity.video }}" frameborder="0" allowfullscreen></iframe>
                                    </center></td></tr>
                    {% endif %}
                     <tbody>
 
  
                                    

                                </tbody>
                            </table>
                        </div>
                   
                </div>
               
                <!-- /.row -->


                

            </div>
            <!-- /.container-fluid -->

        </div>
      
      
        {% endblock  %}
        
          {% block categories %}
       {% for category in categories %}
                              <li>
                                <a href="{{ path('articles',{ 'id': category.id }) }}" >{{ category.titre }}</a>
                            </li>
       {% endfor %}
                            {% endblock %}