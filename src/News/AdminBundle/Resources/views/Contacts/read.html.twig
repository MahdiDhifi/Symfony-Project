{% extends "NewsAdminBundle::layout.html.twig" %}

         {% block  table %}             
    <div id="page-wrapper">

            <div class="container-fluid">

                <!-- Page Heading -->
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">
                           Article details
                        </h1>
                        <ol class="breadcrumb">
                            <li>
                                <i class="fa fa-dashboard"></i>  <a href="#">Dashboard</a>
                            </li>
                            <li class="active">
                                <i class="fa fa-table"></i> Mail
                            </li>
                        </ol>
                    </div>
                </div>
                <!-- /.row -->
<div class="row">
                   
       <h2>  {{entity.subject}}</h2>              
    <p align="right">
                <a href="{{ path('contacts_delete',{ 'id': entity.id }) }}">
                    <button  type="button" class="btn btn-lg btn-primary">Delete this mail</button>
                </a>
                
    </p>
                
                      
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover table-striped">
                               
                                    <tr><td>First Name</td>  <td>{{ entity.first }}</td> </tr>
                                    <tr><td>Last Name</td><td>{{ entity.last}}</td></tr>
                                     <tr><td>Adress mail</td><td>{{ entity.mail}}</td></tr>
                                    <tr><td>Subject</td><td>{{ entity.subject}}</td></tr>
                                     <tr> <td>Content</td>  <td>{{ entity.contenue }}</td></tr>
                                   
                    
                     <tbody>
 
  
                                    

                                </tbody>
                            </table>
                        </div>
                   
                </div>
               
                <!-- /.row -->


                

            </div>
            <!-- /.container-fluid -->

        </div>
      
      
        {% endblock  %}
          {% block categories %}
       {% for category in categories %}
                              <li>
                                <a href="{{ path('articles',{ 'id': category.id }) }}" >{{ category.titre }}</a>
                            </li>
       {% endfor %}
                            {% endblock %}