{% extends "NewsAdminBundle::layout.html.twig" %}


{% block form %}
  <div id="page-wrapper">

            <div class="container-fluid">

                <!-- Page Heading -->
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">
                            Forms
                        </h1>
                        <ol class="breadcrumb">
                            <li>
                                <i class="fa fa-dashboard"></i>  <a href="index.html">Dashboard</a>
                            </li>
                            <li class="active">
                                <i class="fa fa-edit"></i> Edit category
                            </li>
                        </ol>
                    </div>
                </div>
                <!-- /.row -->

                <div class="row">
                   
                  <form  role="form" action="" method="post" enctype="multipart/form-data">
                            {{ form_start(form) }}
                            <div class="form-group">
                                 <label>{{ form_label ( form.titre , "Title:") }}</label>
                                {{ form_widget ( form.titre,{'attr': {'class': 'form-control', 'placeholder': 'Titre'}}) }}
                                {{ form_errors(form.titre) }}
                            </div>
             
               <div class="form-group">
                               <label>{{ form_label ( form.description   , "Description:") }}</label>
                              {{ form_widget ( form.description   ,{'attr': {'class': 'form-control' ,'rows': '3', 'placeholder': 'Description'}}) }}
                                   {{ form_errors(form.description ) }}
                                
                            </div>
                  

        {{ form_widget ( form.submit,{'attr': {'class': 'btn btn-lg btn-primary'}}) }}
                <button type="reset" class="btn btn-lg btn-danger">Cancel</button>
                          
                            {{ form_end(form) }}
                          
                         

                        </form>

                 
                   
                       
                </div>
                <!-- /.row -->

            </div>
            <!-- /.container-fluid -->

        </div>
        <!-- /#page-wrapper -->

    </div>
{% endblock %}
  {% block categories %}
       {% for category in categories %}
                              <li>
                                <a href="{{ path('articles',{ 'id': category.id }) }}" >{{ category.titre }}</a>
                            </li>
       {% endfor %}
                            {% endblock %}
